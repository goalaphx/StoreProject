{% extends 'base.html.twig' %}

{% block title %}Categories List{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
            {% endfor %}
            <h1>Categories List</h1>
            <a href="{{path('admin_category_add')}}" class="btn btn-sm btn-primary mb-3">
                Add
            </a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if categories|length %}
                    {% for category in categories %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ category.name }}</td>
                        <td>
                            <form id="{{category.id}}" action="{{path('admin_category_delete',{id: category.id})}}" method="post"></form>
                            <button onclick="deleteItem('{{ category.id }}')" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </td>
                    </tr>
                    {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="3">
                            <div class="alert alert-info">
                                No Categories Found
                            </div>
                        </td>
                    </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
